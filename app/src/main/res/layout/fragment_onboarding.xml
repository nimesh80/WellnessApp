<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Top spacing -->
        <Space
            android:layout_width="1dp"
            android:layout_height="40dp"/>

        <!-- Logo/Icon Placeholder with fresh green circle -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="32dp">

            <View
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@color/primary_green"
                android:alpha="0.15"/>

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@color/primary_green_light"
                android:alpha="0.3"/>

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/primary_green"/>
        </FrameLayout>

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:textSize="22sp"
            android:textColor="@color/text_secondary"
            android:letterSpacing="0.08"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wellness Tracker"
            android:textSize="36sp"
            android:textColor="@color/primary_green"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"/>

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build better habits, track your wellness journey"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:lineSpacingExtra="4dp"/>

        <!-- Features Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Feature 1: Habits -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/background_white"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/primary_green"
                    android:alpha="0.2"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Habits"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track and build healthy routines"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Feature 2: Mood -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/background_white"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/accent_yellow"
                    android:alpha="0.3"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mood Journal"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monitor your emotional wellness"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Feature 3: Reminders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/background_white"
                android:elevation="2dp">

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/mint_fresh"
                    android:alpha="0.4"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smart Reminders"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Never miss your wellness goals"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Spacer to push buttons to bottom -->
        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Get Started Button -->
        <Button
            android:id="@+id/btn_get_started"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Get Started"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/primary_green"
            android:elevation="4dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:letterSpacing="0.05"
            android:textAllCaps="false"/>

        <!-- Already Have Account Button -->
        <Button
            android:id="@+id/btn_already_have_account"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="I Already Have an Account"
            android:textSize="15sp"
            android:textColor="@color/primary_green"
            android:background="@color/white"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="false"
            style="?attr/borderlessButtonStyle"/>

    </LinearLayout>
</ScrollView>