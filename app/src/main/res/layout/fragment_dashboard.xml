<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Last Mood Card -->
        <LinearLayout
            android:id="@+id/lastMoodCard"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/lastMoodTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Mood"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/lastMoodText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Next Reminder Card -->
        <LinearLayout
            android:id="@+id/nextReminderCard"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/nextReminderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Reminder"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/nextReminderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Hydration Reminder Card -->
        <LinearLayout
            android:id="@+id/hydrationStatusCard"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/hydrationStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hydration Reminder Status"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/hydrationStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inactive"
                android:textSize="16sp"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- Progress Section -->
        <TextView
            android:id="@+id/progressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Completion of Habits"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress: 0%"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:max="100"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
